# Application Configuration
NODE_ENV=development
PORT=3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Database Configuration
# Optional: full connection string. If set, it will be used over individual DB_* vars.
# Example: postgresql://postgres:password@localhost:5432/payment_processing
DB_URL=
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=payment_processing
DB_SYNCHRONIZE=false
DB_LOGGING=false
DB_SSL=false
DB_MAX_CONNECTIONS=10
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# Payment Gateway Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Authorize.Net Configuration
AUTHORIZENET_API_LOGIN_ID=your_api_login_id
AUTHORIZENET_TRANSACTION_KEY=your_transaction_key
AUTHORIZENET_ENVIRONMENT=sandbox

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/app.log

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Security
BCRYPT_ROUNDS=12
CORS_ENABLED=true
ENCRYPTION_KEY=your-encryption-key-change-this-in-production
SESSION_SECRET=your-session-secret-change-this-in-production

# API Key Configuration
API_KEY_PREFIX=pk_live_
API_KEY_LENGTH=64

# IP Whitelist Configuration
IP_WHITELIST_ENABLED=false
ALLOWED_IPS=127.0.0.1,::1
ADMIN_IPS=127.0.0.1

# Audit Configuration
AUDIT_RETENTION_DAYS=365

# PCI DSS Configuration
PCI_COMPLIANCE_MODE=true
DATA_RETENTION_DAYS=1095
SESSION_TIMEOUT=30

# AWS SQS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
SQS_WEBHOOK_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/webhook-events
SQS_WEBHOOK_DLQ_URL=https://sqs.us-east-1.amazonaws.com/123456789012/webhook-events-dlq
SQS_VISIBILITY_TIMEOUT=300
SQS_MESSAGE_RETENTION_PERIOD=1209600
SQS_MAX_RECEIVE_COUNT=3

# Webhook Configuration
WEBHOOK_SECRET_KEY=your-webhook-secret-key-change-this-in-production
WEBHOOK_SIGNATURE_HEADER=X-ANET-Signature
WEBHOOK_TIMEOUT=30000
